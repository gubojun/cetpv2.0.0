<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EverydayView" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/preference_lin_single_item"
                android:clickable="true"
                android:focusable="false"
                android:orientation="vertical"
                android:paddingBottom="@dimen/lin_vertical_padding"
                android:paddingLeft="@dimen/lin_vertical_padding"
                android:paddingRight="@dimen/lin_vertical_padding"
                android:paddingTop="@dimen/lin_vertical_padding" >

                <ImageView
                    android:id="@+id/ImageView01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/scene1" />

                <TextView
                    android:id="@+id/TextView02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Let&apos;s always meet each other with smile, for the smile is the beginning of love."
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/darkred" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/TextView01"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/img_item"
                        android:singleLine="true"
                        android:text="让我们带着微笑相遇吧，因为微笑是爱的开始。"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <ImageView
                        android:id="@+id/img_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:scaleType="matrix"
                        android:src="@drawable/mm_submenu" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/preference_lin_single_item"
                android:clickable="true"
                android:focusable="false"
                android:orientation="vertical"
                android:paddingBottom="@dimen/lin_vertical_padding"
                android:paddingLeft="@dimen/lin_vertical_padding"
                android:paddingRight="@dimen/lin_vertical_padding"
                android:paddingTop="@dimen/lin_vertical_padding" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/scene2" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yesterday is not ours to reccover, but tomorrow is ours to win or lose."
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/darkred" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/img_item"
                        android:singleLine="true"
                        android:text="往者不可谏，来者犹可追。"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <ImageView
                        android:id="@+id/img_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:scaleType="matrix"
                        android:src="@drawable/mm_submenu" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/preference_lin_single_item"
                android:clickable="true"
                android:focusable="false"
                android:orientation="vertical"
                android:paddingBottom="@dimen/lin_vertical_padding"
                android:paddingLeft="@dimen/lin_vertical_padding"
                android:paddingRight="@dimen/lin_vertical_padding"
                android:paddingTop="@dimen/lin_vertical_padding" >

                <ImageView
                    android:id="@+id/ImageView02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/scene4" />

                <TextView
                    android:id="@+id/TextView04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keep your face to the sunshine,and you cannot see a shadow."
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/darkred" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/TextView03"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/img_item"
                        android:singleLine="true"
                        android:text="面朝阳光，你的世界就无阴影。"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <ImageView
                        android:id="@+id/img_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:scaleType="matrix"
                        android:src="@drawable/mm_submenu" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>